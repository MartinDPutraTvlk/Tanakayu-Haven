<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_blue_sky</item>
        <item name="colorPrimaryDark">@color/color_dark_blue_sky</item>
        <item name="colorAccent">@color/color_bright_green</item>
        <item name="android:textViewStyle">@style/TanakayuTextView</item>
        <item name="android:buttonStyle">@style/TanakayuButton</item>
    </style>

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TanakayuTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TanakayuEditText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:padding">@dimen/spacing_m</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TanakayuButton" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_button_text_primary</item>
        <item name="backgroundTint">@color/color_button_background_primary</item>
    </style>
</resources>